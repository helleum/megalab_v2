<%= render :partial => 'shared/pref_nav', 
           :locals => { :action => params[:action].titleize, :name => nil } %>

<div class="container">
  <%= error_messages_for 'system_parameter' %>
  <div class="roundcont">
    <div class="roundtop">
      <img src="/images/tl.gif" width="10" height="10" class="corner" style="display: none" />
    </div>
  </div>
  
  <% form_tag :action => 'create' do %>
    <div class="container_div">
      <h1>New Parameter</h1>
      <div class="cssform">
        <%= render :partial => 'form' %>
        <br/>
        <%= submit_tag "Create" %>
      </div>
    </div>
  <% end %>
</div>

<% content_for :menubar do %>
<div class="headerbar">
  <div class="left">
    Menu
  </div>
 
  <div class="spacer"></div>
</div>

<div class="container">
  <ul class="tree">
    <li class="open">
      <%= link_to "Action", "#"  %>
      <ul>
        <li><%= link_to 'Back', :action => 'list' %></li>
      </ul>
    </li>
  </ul>
</div>
<% end %>