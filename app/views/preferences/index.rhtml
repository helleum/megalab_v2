<%= render :partial => 'shared/pref_nav', 
           :locals => { :action => nil, :name => nil } %>

<div class="container">

Select an option on the left panel.

</div>

<% content_for :menubar do %>
<div class="headerbar">
  <div class="left">
    Menu
  </div>
 
  <div class="spacer"></div>
</div>

<div class="container">
  <ul class="tree">
    <li class="open">
      <%= link_to "Options", "#"  %>
      <ul>
		<% if current_user.has_role?("Root") -%>
		<li><%= link_to 'List', :action => 'list' %></li>
		<% end %>
        <li><%= link_to 'My Account', :action => 'my_account' %></li>
        <li><%= link_to 'Paginator', :action => 'paginator' if SystemParameter.find_by_name("paginator").is_editable? %></li>
        <li><%= link_to 'Back', :controller => 'main' %></li>
      </ul>
    </li>
  </ul>
</div>
<% end %>
