<%= render :partial => 'shared/user_nav', 
           :locals => { :title => @role.class.to_s.titleize, 
						:name => @role.title.titleize, 
						:action => params[:action].titleize } %>

<div class="container">
  <%= error_messages_for 'group' %>
  <div class="roundcont">
    <div class="roundtop">
      <img src="/images/tl.gif" width="10" height="10" class="corner" style="display: none" />
    </div>
  </div>
  
  <% form_for(:role, :url => role_path(@role), :html => { :method => :put  }) do |f| %>
    <div class="container_div">
      <h1>Editing Role</h1>
      <div class="groupform">
        <%= render_partial 'form' %>
        <br/>
        <%= submit_tag "Update" %>   
      </div>
    </div>
  <% end %>
</div>

<% content_for :menubar do %>
<div class="headerbar">
  <div class="left">
    Menu
  </div>
 
  <div class="spacer"></div>
</div>

<div class="container">
  <ul class="tree">
    <li class="open">
      <%= link_to "Action", "#"  %>
      <ul>
        <li><%= link_to 'Back', roles_path %></li>
      </ul>
    </li>
  </ul>
</div>
<% end %>